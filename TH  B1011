#include<stdio.h>
#include<conio.h>
#include<string.h>
#include<ctype.h>
#include<stdlib.h>
void chon1(int a[50][50]);
void nhap2c(int a[50][50],int m,int n);
void xuat2c(int a[50][50],int m,int n);
void sapxep(int a[50][50],int m,int n);
void chon2(char s[50]);
int xoa(char s[50],int vitrixoa);
int xoakt(char s[50]);
int chuanhoa(char s[50]);
int main()
{
	char s[50],key;
	int a[50][50];
	while(true)
	  {
	  	system("cls");
	    printf("********************************************************************************\n");
	    printf("**                              THAO TAC TREN CHUOI                           **\n");
	    printf("**                           1. Mang 2 chieu                                  **\n");
	    printf("**                           2. Chuan hoa chuoi ky tu                          **\n");
	    printf("**                           3. Danh sach sinh vien                            **\n");
	    printf("********************************************************************************\n");
	    fflush(stdin);
	    printf("\n  \t\t AN PHOM CHON:");
	    scanf("%d",&key);
	    switch(key)
	      {
	      	 case 1:
	      	 	fflush(stdin);
	      	 	chon1(a);
	      	 	printf("\n An phim bat ky de tiep tuc ");
	      	 	getch();
	      	 	break;
	      	 case 2:
			    fflush(stdin);
	      	 	chon2(s);
	      	 	printf("\n An phim bat ky de tiep tuc ");
	      	 	getch();
	      	 	break;
	      	 case 3:	
				fflush(stdin);
	      	 	printf("\n An phim bat ky de tiep tuc ");
	      	 	getch();
	      	 	break;
	      	 case 0:
	      	 	exit(1);
             default:
			    printf("\n Khong co chuc nang nay!");
				printf("\n An phim bat ky de tiep tuc ");
				getch();
				break;	
		 }	
	 }
}		
void chon1(int a[50][50])
 {
 	int m,n;
 	printf("\nNhap so dong m:");
 	scanf("%d",&m);
 	printf("\nNhap so cot n:");
 	scanf("%d",&n);
 	nhap2c(a,m,n);
 	xuat2c(a,m,n);
 	sapxep(a,m,n);
 	xuat2c(a,m,n);
 }
 void nhap2c(int a[50][50],int m,int n)
 {
 	for(int i=0;i<m;i++)
 	{
 	  for(int j=0;j<n;j++)
 	   {
 	   	 printf("\nNhap phan thu thu a[%d][%d]=",i,j);
 	   	 scanf("%d",&a[i][j]);
 	   }
 	}
 }
 void xuat2c(int a[50][50],int m,int n)
  {
  	for(int i=0;i<m;i++)
  	  for(int j=0;j<n;j++)
  	printf("\n\t%d",a[i][j]);
  }
 void sapxep(int a[50][50],int m,int n)
 {
 	int k=n*m,tam;
 	for(int i=0;i<k;i++)
 	 {
 	   for(int j=i+1;j<k;j++)
 	     if(a[i/m][i%m]>a[j/m][j%m])
 	       {
 	       	 tam=a[i/m][i%m];
 	       	 a[i/m][i%m]=a[j/m][j%m];
 	       	 a[j/m][j%m]=tam;
 	       }
 	 } 
	  printf("\nMang sau khi sap xep theo thu tu tang dan la:");
 }
 void chon2(char s[50])
{
	printf("Nhap chuoi s:");
	gets(s);
	chuanhoa(s);
	printf("\n Chuoi chuan hoa:");
	puts(s);
}
  int xoa(char s[50],int vitrixoa)
  {
  	int n=strlen(s);
  	for(int i=vitrixoa;i<n;i++)
  	s[i]=s[i]+1;
  	s[n-1]='\0'; 
  }
  int xoakt(char s[50])
{
	for(int i=0;i<strlen(s);i++)
     if(s[i]==' ' && s[i+1]==' ')
	 {
	  xoa(s,i);
	  i--;
	 }
	 if(s[0]==' ')
	 xoa(s,0);
	 if(s[strlen(s)-1]==' ')
	 xoa(s,strlen(s)-1);     
}	 

  int chuanhoa(char s[50])
  {
  	int i=0;
  	strlwr(s);
  	xoakt(s);	
  	s[0]=s[0]-32;
  	for(int i=0;i<strlen(s);i++)
  	 {
  	 	if(s[i]==' ' && s[i+1]!=' ')
  	 	s[i+1]=s[i+1]-32;
  	 }
  }  
  
  
 	   
	    
